# Template file for 'Papirus-Nord'
pkgname=Papirus-Nord
version=202008291420
revision=1
makedepends="gtk-update-icon-cache papirus-icon-theme"
short_desc="Custom colors for folder icons for Papirus Icon Theme!"
maintainer="ndgnuh <ndgnuh@protonmail.com>"
license="GPL-3.0-or-later"
homepage="https://github.com/Adapta-Projects/Papirus-Nord"
distfiles="${homepage}/archive/${version}.tar.gz"
checksum=63407cee62be9e1ba3a9dde39d4943141dfc855e18c965cf7bf0d70ac2f337e8
nostrip_files="true"
nostrip="true"
noshlibprovides="true"
noverifyrdeps="true"

__colors="auroragreen auroraorange aurorayellow frostblue4
frostblue2 auroramagenta aurorared frostblue3
frostblue polarnight3 polarnight1 snowstorm1"

do_build() {
	mkdir build -p
	./Install.sh
	for __color in ${__colors}; do
		papirus-folders -C ${__color}
		cp /usr/share/icons/Papirus build/Papirus-${__color} -r
		vsed -e "s|Name=Papirus|Name=Papirus ${__color}|" -i build/Papirus-${__color}/index.theme
	done
}

do_install() {
	mkdir $PKGDESTDIR/usr/share/icons/ -p
	cp build/* -r $PKGDESTDIR/usr/share/icons/
	vlicense LICENSE
}
